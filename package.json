{
  "name": "@writing-tools/writing-tools",
  "version": "0.2.1",
  "description": "A style checker for technical writers",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/writing-tools/writing-tools.git"
  },
  "author": "Thiago Carvalho <thiago.oak@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/writing-tools/writing-tools/issues"
  },
  "homepage": "https://github.com/writing-tools/writing-tools#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "jest-cli": "^25.4.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  }
}
